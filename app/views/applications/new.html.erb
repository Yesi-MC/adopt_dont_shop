<h1><%= "New Application" %></h1>
<%= form_tag "/applications" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br> 
  <%= label_tag :address %>
  <%= text_field_tag :address %><br>
  <%= label_tag :city %>
  <%= text_field_tag :city %><br>
  <%= label_tag :state %>
  <%= text_field_tag :state %><br>
  <%= label_tag :zip %>
  <%= text_field_tag :zip %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  <%= label_tag :application_status %>
  <%= text_field_tag :application_status %><br>
  <%= submit_tag 'Submit' %> 
<% end %>

